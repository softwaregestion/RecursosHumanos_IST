@model IST.RRHH.Web.Helpers.ModelUsers


<div class="login-page">





    <div class="row">


        <div class="col-sm-6 col-sm-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Recuperar cuenta de usuario</h3>
                </div>
                <div class="panel-body">

                    <partial name="_ValidationMsj" />
                   
                    <form method="post" action="~/Recovery/recovery" novalidate="novalidate">
                        <img src="~/img/logo-web.png" class="img img-responsive">
                        @Html.HiddenFor(c => c.IsMobile)
                        <div class="text-danger validation-summary-valid" data-valmsg-summary="true">
                            <ul>
                                <li style="display:none"></li>
                            </ul>
                        </div>
                        <div class="form-group">
                            <label for="Email">
                                ingrese el correo electrónico que utilizó al momento de registro de usuario. Dentro de los próximos minutos se enviará un código para restablecer su contraseña
                            </label>
                            <input class="form-control" type="email" data-val="true" data-val-email="El campo Correo electrónico no es un e-mail válido." data-val-length="El Correo electrónico debe ser entre 5 y 100 caracteres de largo." data-val-length-max="100" data-val-length-min="5" id="Email" name="Email" value="@Model.Email">
                            <span class="text-danger field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span>
                        </div>
                        <div class="form-group text-center">
                            <button class="btn btn-primary col-sm-12" name="button" value="login">Enviar Código</button>

                        </div>
                        @if (Model.IsMobile != true)
                        {
                            <div class="form-group text-center">
                                <a href="~/Account/Login">Volver al login</a>

                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/pwstrength/pwstrength-bootstrap.min.js"></script>
<script src="~/lib/pwstrength/zxcvbn.js"></script>


<script type="text/javascript">
    $(document).ready(function () {

        // Example 1
        var options1 = {};
        options1.ui = {
            container: "#pwd-container1",
            showVerdictsInsideProgressBar: true,
            viewports: {
                progress: ".pwstrength_viewport_progress"
            }
        };
        options1.common = {
            debug: false,
        };
        $('.passwordValidate').pwstrength(options1);
        
    });
</script>
