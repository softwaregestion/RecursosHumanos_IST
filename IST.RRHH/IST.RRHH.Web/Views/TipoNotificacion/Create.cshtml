@model IST.RRHH.Web.Models.TipoNotificacionViewModel

@section Styles {
    <link href="~/lib//tag-it/css/jquery.tagit.css" rel="stylesheet" />
    <link href="~/lib/summernote/dist/summernote-lite.css" rel="stylesheet" />


    <style>
        .w-100px {
            width: 130px !important;
        }
    </style>
}
@section Scripts {
    <script src="~/lib/jquery-migrate/dist/jquery-migrate.min.js"></script>
    <script src="~/lib/tag-it/js/tag-it.min.js"></script>
    <script src="~/lib/summernote/dist/summernote-lite.min.js"></script>
    <script src="~/js/demo/email-compose.demo.js"></script>
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Crear Tipo de Notificacion</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "TipoNotificacion")" style="color: #702fa0">Tipo de Notificacion</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Crear Tipo de Notificacion</strong>
            </li>
        </ol>
    </div>
</div>


<div class="mailbox">
    <!-- BEGIN mailbox-toolbar -->
    @using (Html.BeginForm("Create", "TipoNotificacion", FormMethod.Post))
    {

        <div class="mailbox-toolbar">
            <div class="mailbox-toolbar-item"><span class="mailbox-toolbar-text">Crear registro</span></div>
            <div class="mailbox-toolbar-item"><button class="btn btn-sm" style="margin-top: -2px; background-color: #702fa0; color: white">Crear</button></div>

            @*<div class="mailbox-toolbar-item ms-auto"><a asp-controller="TipoNotificacion" asp-action="Index" class="mailbox-toolbar-link"><i class="fa fa-times fa-fw"></i> Cancelar</a></div>*@
        </div>
        <!-- END mailbox-toolbar -->
        <!-- BEGIN mailbox-body -->
        <div class="mailbox-body">
            <div class="mailbox-content">
                <!-- BEGIN scrollbar -->
                <div data-scrollbar="true" data-height="100%" data-skip-mobile="true">
                    <div class="mailbox-form">
                        <form action="#" method="POST" name="email_form">
                            <div class="mailbox-form-header">
                                <div class="row p-1">
                                    <label class="col-form-label w-100px ps-2 pe-2 fw-500 text-end">Nombre:</label>
                                    <div class="col">
                                        @Html.TextBoxFor(d => d.Nombre, new { @class = "form-control", @placeholder = "Nombre" })
                                        @*<input type="text" class="form-control" placeholder="Identificación" />*@
                                    </div>
                                </div>




                            </div>
                            <textarea name="ContenidoPlantilla" class="summernote form-control" title="Contents"></textarea>
                        </form>
                    </div>
                </div>
                <!-- END scrollbar -->
            </div>
        </div>
        <!-- END mailbox-body -->
    }

</div>