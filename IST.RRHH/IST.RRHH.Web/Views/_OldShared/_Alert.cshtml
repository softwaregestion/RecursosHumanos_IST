@if (TempData["Error"] != null)
{

    <div class="alert alert-danger alert-dismissible container fade show" style="margin-bottom: 60px;" role="alert">
        <strong>@TempData["Error"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible container fade show" style="margin-bottom: 60px;" role="alert">
        <strong>@TempData["Success"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

